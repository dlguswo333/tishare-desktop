{
  "name": "tishare-desktop",
  "author": {
    "name": "dlguswo333"
  },
  "version": "0.3.0",
  "description": "Share files and folders across devices easily with cross-platform support.",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@dlguswo333/react-simple-spinner": "^0.6.0",
    "electron": "^15.1.2",
    "electron-builder": "^22.11.11",
    "mocha": "^9.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.3",
    "sass": "^1.43.2"
  },
  "homepage": "./",
  "main": "src/back/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "mocha ./src/back/back.test.js",
    "eject": "react-scripts eject",
    "electron": "electron --trace-warnings .",
    "builder": "npm run build && electron-builder"
  },
  "build": {
    "productName": "tiShare",
    "files": [
      "build/**/*",
      "src/back/**",
      "src/defs.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "buildResources": "public"
    },
    "nsis": {
      "oneClick": false
    },
    "extends": null
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

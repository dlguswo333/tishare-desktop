{
  "name": "tishare-desktop",
  "author": {
    "name": "dlguswo333"
  },
  "version": "0.3.7",
  "description": "Share files and folders across devices easily with cross-platform support.",
  "private": false,
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@dlguswo333/react-simple-spinner": "^0.6.0",
    "electron": "^26.2.2",
    "electron-builder": "^23.6.0",
    "mocha": "^9.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.59.3"
  },
  "homepage": "./",
  "main": "src/back/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "mocha ./src/back/back.test.js",
    "eject": "react-scripts eject",
    "electron": "electron --trace-warnings .",
    "builder": "npm run build && electron-builder"
  },
  "build": {
    "productName": "tiShare",
    "files": [
      "build/**/*",
      "src/back/**",
      "src/defs.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "buildResources": "public"
    },
    "nsis": {
      "oneClick": false
    },
    "extends": null
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "chrome >= 90"
    ],
    "development": [
      "chrome >= 90"
    ]
  }
}
